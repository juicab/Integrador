@model PaperMID.BO.LoginBO

@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Master/_LayoutPublico.cshtml";
}
@section Inicio{
    <a href="@Url.Action("Index", "Publico")">
        <i class="material-icons">unarchive</i>Inicio
    </a>
}
<div class="wrapper">
    <div class="header header-filter" style="background-image: url('../Style/assets/img/fondo2.jpg'); background-size: cover; background-position: top center;">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <div class="card card-signup">
                            <div class="form" id="DivLogin">
                                <div class="header header-primary text-center">
                                    <h4>Iniciar Sesión</h4>
                                    <div class="social-line">
                                        <a href="#pablo" class="btn btn-simple btn-just-icon">
                                            <i class="fa fa-facebook-square"></i>
                                        </a>
                                        <a href="#pablo" class="btn btn-simple btn-just-icon">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                        <a href="#pablo" class="btn btn-simple btn-just-icon">
                                            <i class="fa fa-google-plus"></i>
                                        </a>
                                    </div>
                                    <a class="text-divider" style="color:white" href="@Url.Action("Registrarse","Publico")">Registrarse</a>
                                </div>
                            
                                @using (Ajax.BeginForm("Login", "Publico", new AjaxOptions { HttpMethod="POST", UpdateTargetId="DivLogin" }))
                                {
                                @Html.AntiForgeryToken()
                                    <div class="content">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">face</i>
                                            </span>
                                            <input class="form-control" placeholder="Usuario..." type="text" requiered="requiered" name="Usuario" />
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <input class="form-control" placeholder="Contraseña..." type="password" requiered="requiered" name="ContraseñaUsu" />
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <input type="submit" value="entrar" class="btn btn-simple btn-primary btn-lg" />
                                    </div>
                                }
                            </div>    
                        </div>
                        <div style="text-align:right">    
                            <a class="text-divider" style="color:white;" href="@Url.Action("Restablecer","Publico")">¿No puedes acceder a tu cuenta?</a>
                        </div>
                        
                    </div>
                </div>
            </div>
      </div>
</div>

