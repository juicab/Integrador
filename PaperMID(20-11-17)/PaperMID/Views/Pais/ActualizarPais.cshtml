@model PaperMID.BO.PaisBO

@{
    ViewBag.Title = "ActualizarPais";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<section class="content-header">
    <h1>
        País
    </h1>
</section>
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Datos</h3>
                </div>
                @using (Ajax.BeginForm("ActuaDatosPais", "Pais", new AjaxOptions { HttpMethod = "POST" }))
                {
                    @Html.AntiForgeryToken()

                    <form role="form">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Código</label>
                                        <input type="hidden" name="IdPais" value="@Model.IdPais" /><!--Input oculto/Sirve para recuperar el ID-->
                                        <input type="text" class="form-control" disabled value="@Model.IdPais" /><!--Disable / no manda datos a ActionResult-->
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label>Nombre del Pais</label>
                                        <input type="text" class="form-control" name="NombrePais" value="@Model.NombrePais" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-info pull-right">Editar</button>
                        </div>
                    </form>
                }

            </div>
        </div>
    </div>
</section>

