<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Style/Front/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Style/Front/assets/img/favicon.png">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--MVC-->
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!---->
    <title>Paper MID</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Style/Front/bootstrap3/css/bootstrap.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Grand+Hotel' rel='stylesheet' type='text/css'>
    <link href="~/Style/Front/assets/css/gsdk.css" rel="stylesheet" />
    <link href="~/Style/Front/assets/css/demo.css" rel="stylesheet" />
    <link href="~/Style/Front/bootstrap3/css/font-awesome.css" rel="stylesheet">
    <script src="~/Style/Front/jquery/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Style/Front/assets/js/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
    <script src="~/Style/Front/bootstrap3/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Style/Front/assets/js/gsdk-checkbox.js"></script>
    <script src="~/Style/Front/assets/js/gsdk-radio.js"></script>
    <script src="~/Style/Front/assets/js/gsdk-bootstrapswitch.js"></script>
    <script src="~/Style/Front/assets/js/get-shit-done.js"></script>
    <link href="~/Style/Front/assets/css/Personalizacion.css" rel="stylesheet" />
    @{
        if (Session["IdUsuario"] != null)
        {
            string User = Session["IdUsuario"].ToString();
        }
        else
        {
            Response.Redirect("~/Publico/Index");
        }
    }
</head>
<body>
    <div id="navbar-full">
        <div class="container">
            <nav class="navbar navbar-ct-blue navbar-transparent navbar-fixed-top" role="navigation">

                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="">
                            <div class="logo-container">
                                <div class="logo">
                                    @if (Session["ImagenUsu"] != null)
                                    {
                                        String Photo = "data:image/jpeg;base64," + Convert.ToBase64String((byte[])Session["ImagenUsu"]);
                                        <img src="@Photo" width="50" height="50">
                                    }
                                    else
                                    {
                                        <img src="~/Style/Front/assets/img/new_logo.png">
                                    }
                                    
                                </div>
                                <div class="brand" style="text-align:justify;">
                                    @if (Session["Usuario"]!=null)
                                    {
                                        String Usuario = Session["Usuario"].ToString();
                                        <p>Bienvenido&nbsp;@Usuario</p>
                                    }
                                    else
                                    {
                                        <p>&nbsp;Paper MID</p>
                                    }
                                    
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="@Url.Action("Index")", class="btn btn-round btn-warning btn-fill" style="font-family:'Bookman Old Style'; font-size:16px;" >  
                                    <i class=""></i> Inicio
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index")", class="btn btn-round btn-success btn-fill"style="font-family:'Bookman Old Style'; font-size:16px;">
                                    <i class=""></i> Quiénes Somos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProductosRepCli")", class="btn btn-round btn-info btn-fill"style="font-family:'Bookman Old Style'; font-size:16px;">
                                    <i class=""></i> Productos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Logout", "Publico")", class="btn btn-round btn-danger btn-fill"style="font-family:'Bookman Old Style'; font-size:16px;">
                                    <i class="material-icons"></i>Cerrar Sesión
                                </a>
                            </li>
                        </ul>

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div><!--  end container-->


        <div id="carousel blurred-container">
            <div id="carousel-example-generic" class="carousel slide blurred-container" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Style/Front/assets/img/car1.png" alt="Awesome Image">
                    </div>
                    <div class="item">
                        <img src="~/Style/Front/assets/img/car2.png" alt="Awesome Image">
                    </div>
                    <div class="item">
                        <img src="~/Style/Front/assets/img/car3.jpg" alt="Awesome Image">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="fa fa-angle-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="fa fa-angle-right"></span>
                </a>
            </div>
        </div> <!-- end carousel -->

    </div>
    <div class="main">
        <div class="container tim-container">
            @RenderBody()
        </div>
        <!-- end container -->
    </div>
    <div class="footer">
        <div class="overlayer">
            <div class="container">
                <div class="row support">
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-2">
                    </div>
                </div>
                <div class="row">
                    <div class="credits">
                        &copy; 2017 Proyecto Integrador con <i class="fa fa-heart heart" alt="love"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

