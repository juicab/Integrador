<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Style/Front/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Style/Front/assets/img/favicon.png">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--MVC-->
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!---->
    <title>Paper MID</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Style/Front/bootstrap3/css/bootstrap.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Grand+Hotel' rel='stylesheet' type='text/css'>
    <link href="~/Style/Front/assets/css/gsdk.css" rel="stylesheet" />
    <link href="~/Style/Front/assets/css/demo.css" rel="stylesheet" />
    <link href="~/Style/Front/bootstrap3/css/font-awesome.css" rel="stylesheet">
    <script src="~/Style/Front/jquery/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Style/Front/assets/js/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
    <script src="~/Style/Front/bootstrap3/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Style/Front/assets/js/gsdk-checkbox.js"></script>
    <script src="~/Style/Front/assets/js/gsdk-radio.js"></script>
    <script src="~/Style/Front/assets/js/gsdk-bootstrapswitch.js"></script>
    <script src="~/Style/Front/assets/js/get-shit-done.js"></script>
    @{
        if (Session["IdUsuario"] != null)
        {
            string User = Session["IdUsuario"].ToString();
        }
        else
        {
            Response.Redirect("~/Publico/Index");
        }
    }
</head>
<body>
    <div id="navbar-full">
        <div class="container">
            <nav class="navbar navbar-ct-blue navbar-transparent navbar-fixed-top" role="navigation">

                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="">
                            <div class="logo-container">
                                <div class="logo">
                                    @if (Session["ImagenUsu"] != null)
                                    {
                                        String Photo = "data:image/jpeg;base64," + Convert.ToBase64String((byte[])Session["ImagenUsu"]);
                                        <img src="@Photo" width="50" height="50">
                                    }
                                    else
                                    {
                                        <img src="~/Style/Front/assets/img/new_logo.png">
                                    }
                                    
                                </div>
                                <div class="brand" style="text-align:center;">
                                    @if (Session["Usuario"]!=null)
                                    {
                                        String Usuario = Session["Usuario"].ToString();
                                        <p>&nbsp;@Usuario</p>
                                    }
                                    else
                                    {
                                        <p>&nbsp;Paper MID</p>
                                    }
                                    
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="@Url.Action("Index")">
                                    <i class=""></i> Inicio
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index")">
                                    <i class="pe-7s-leaf"></i> Quienes Somos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProductosRepCli")">
                                    <i class="pe-7s-leaf"></i> Productos
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Logout", "Publico")" class="btn btn-round btn-default">
                                    <i class="material-icons"></i>Cerrar Sesión
                                </a>
                            </li>
                        </ul>

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div><!--  end container-->

        <div class='blurred-container'>
            <div class="motto">
                <div>Get</div>
                <div class="border no-right-border">Sh</div><div class="border">it</div>
                <div>Done</div>
            </div>
            <div class="img-src" style="background-image: url('../Style/Front/assets/img/cover_4.jpg')"></div>
            <div class='img-src blur' style="background-image: url('../Style/Front/assets/img/cover_4_blur.jpg')"></div>
        </div>

    </div>
    <div class="main">
        <div class="container tim-container">
            @RenderBody()
        </div>
        <!-- end container -->
    </div>
    <div class="footer">
        <div class="overlayer">
            <div class="container">
                <div class="row support">
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-2">
                    </div>
                </div>
                <div class="row">
                    <div class="credits">
                        &copy; 2016 Get Shit Done Kit, made with <i class="fa fa-heart heart" alt="love"></i> for a better web.
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

