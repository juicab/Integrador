@model PaperMID.BO.ProveedorBO

@{
    ViewBag.Title = "Actualizar_Proveedor";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <!--Inicio Contenido-->
                <div class="header">
                    <h2 class="title">Proveedor</h2>
                </div>
                <div class="content">
                    <!--Contenido Formulario-->
                    @using (Ajax.BeginForm("ActualizarDatos_Proveedor", "Proveedor", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()

                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Código</label>
                                                <input type="hidden" class="form-control" name="IdProveedor" value="@Model.idProveedor" /><!--Input oculto/Sirve para recuperar el ID-->
                                                <input type="text" class="form-control" disabled value="@Model.idProveedor" /><!--Disable / no manda dados a ActionResult-->
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Nombre del Proveedor</label>
                                                <input type="text" class="form-control" name="NombreProv" value="@Model.NombreProv" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Teléfono</label>
                                                <input type="text" class="form-control" name="TelefonoProv" value="@Model.TelefonoProv" />
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label>Correo Electronico</label>
                                                <input type="text" class="form-control" name="CorreoProv" value="@Model.CorreoProv" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="=row" style="padding:0,20px;">
                                <div class="col-md-12">
                                    <!--col-md-10 col-md-offset-1-->
                                    <button type="submit" class="btn btn-info btn-fill btn-block">Editar</button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    }

                </div><!--Contenido Formulario-->
            </div><!--Fin Contenido-->
        </div>
    </div>
</div>

