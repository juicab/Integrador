@model PaperMID.BO.EstadoBO

@{
    ViewBag.Title = "ActualizarEstado";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <!--Inicio Contenido-->
                <div class="header">
                    <h2 class="title">Estado</h2>
                </div>
                <div class="content">
                    <!--Contenido Formulario-->
                    @using (Ajax.BeginForm("ActuaDatosEdo", "Estado", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()

                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Código</label>
                                                <input type="hidden" name="IdEstado" value="@Model.IdEstado" /><!--Input oculto/Sirve para recuperar el ID-->
                                                <input type="text" class="form-control" disabled value="@Model.IdEstado" /><!--Disable / no manda datos a ActionResult-->
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Nombre del Estado</label>
                                                <input type="text" class="form-control" name="NombreEdo" value="@Model.NombreEdo" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Pais</label>
                                                @Html.DropDownList("IdPais1", null, htmlAttributes: new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="=row" style="padding:0,20px;">
                                <div class="col-md-12">
                                    <!--col-md-10 col-md-offset-1-->
                                    <button type="submit" class="btn btn-info btn-fill btn-block">Editar</button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    }

                </div><!--Contenido Formulario-->
            </div><!--Fin Contenido-->
        </div>
    </div>
</div>

