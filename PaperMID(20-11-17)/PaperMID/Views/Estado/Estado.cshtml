@model PaperMID.BO.EstadoBO
@{
    ViewBag.Title = "Estado";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}

<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="row">
            @using (Html.BeginForm("Agregar_Estado", "Estado", FormMethod.Post))
            {
                <div class="col-md-11">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Estado</h4>
                            @Html.ActionLink("Mostrar el Listado de Estados", "MostrarEstado")
                        </div>
                        <div class="content">
                            <form>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Código</label>
                                            <input type="text" disabled class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Nombre del Estado</label>
                                            @Html.TextBoxFor(x => x.NombreEdo, new { @class = "form-control" })
                                        </div>

                                    </div>
                                    @{ 
                                        Html.RenderAction("ParcialPais", "Estado");
                                    }
                                    <div>

                                    </div>
                                </div>
                                <div class="=row">
                                    <button type="submit" class="btn btn-info btn-fill pull-right btn-round">Guardar</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <button type="submit" class="btn btn-info btn-fill pull-right btn-round">Nuevo</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
    @{ Html.RenderAction("MostrarEstadoParcial", "Estado");}
</div>


