@using System.Data;
@model DataTable

<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="col-md-11">
            <div class="card">
                <div class="header">
                    <h4 class="title">Mostrar Estados</h4>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre del Estado</th>
                            <th>Nombre del Pais</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
            {
                            <tr id="fila_@row["IdEstado"]">
                                <td>@row["IdEstado"]</td>
                                <td>@row["NombreEdo"]</td>
                                <td>@row["NombrePais"]</td>
                                <td>@Html.ActionLink("Editar", "ActualizarEstado", "Estado", new { id = @row["IdEstado"], @class = "btn btn-info btn-fill pull-right" }, null)</td>
                                <td>@Html.ActionLink("Eliminar", "EliminarEdo", new { id = @row["IdEstado"], @class = "btn btn-info btn-fill pull-right" }, null)</td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
