@using System.Data;
@model DataTable

<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="col-md-11">
            <div class="card">
                <div class="header">
                    <h4 class="title">Mostrar Tipos Producto</h4>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Tipo De Producto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
            {
                            <tr id="fila_@row["IdTipoProducto"]">
                                <td>@row["IdTipoProducto"]</td>
                                <td>@row["TipoProd"]</td>
                                <td>@Html.ActionLink("Editar", "Actualizar_TPro", "TipoProducto", new { id = @row["IdTipoProducto"], @class = "btn btn-info btn-fill pull-right" }, null)</td>
                                <td>@Html.ActionLink("Eliminar", "Eliminar_TProd", new { id = @row["IdTipoProducto"], @class = "btn btn-info btn-fill pull-right" }, null)</td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

