@model PaperMID.BO.ProductoBO

@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="row">
            @using (Ajax.BeginForm("Agregar_Producto", "Producto", new AjaxOptions { HttpMethod = "POST" }))
            {
                @Html.AntiForgeryToken()

                <div class="col-md-11">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Productos</h4>
                        </div>
                        <div class="content">
                            <form>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Código</label>
                                            <input type="text" disabled class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label>Nombre Producto</label>
                                            <input type="text" class="form-control" name="NombreProd" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label>Descripcion del Producto</label>
                                            <textarea class="form-control" placeholder="Escribe aquí la descripción del producto" rows="5" style="width: 100%; height: 87px;" name="DescripcionProd"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group ">
                                            <label>Precio Producto</label>
                                            <input type="text" class="form-control" name="PrecioProd" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group ">
                                            <label>Descuento Producto</label>
                                            <input type="text" class="form-control" name="DescuentoProd" />
                                        </div>
                                    </div>
                                    @{ Html.RenderAction("DropDownList_Proveedores", "Producto");}
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group ">
                                            <label>Cantidad Disponible</label>
                                            <input type="text" class="form-control" name="CantidadDisponibleProd" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group ">
                                            <label>Cantidad Mínima</label>
                                            <input type="text" class="form-control" name="CantidadMinimaProd" />
                                        </div>
                                    </div>
                                    @{ Html.RenderAction("DropDown_ListTipo_Producto", "Producto");}
                                </div>

                                <div class="=row">
                                    <button type="submit" class="btn btn-info btn-fill pull-right btn-round">Guardar</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
             }

        </div>
    </div>
    <div class="row">
        <p></p>
    </div>
    @{ Html.RenderAction("List_Productos", "Producto");}
</div>

