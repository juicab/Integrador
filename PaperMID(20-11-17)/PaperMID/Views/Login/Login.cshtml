@model PaperMID.BO.LoginBO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Iniciar Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">

    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Open+Sans'>
    <link href="~/Style/login/css/style.css" rel="stylesheet" />

</head>
<body>

    <div class="cont">
        <div class="demo">
            <div class="login">
                <div class="login__check"></div>
                <div class="login__form">
@using (Ajax.BeginForm("Login", "Publico", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "DivLogin" }))
{
    @Html.AntiForgeryToken()
                    <div class="login__row">
                        <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                            <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                        </svg>
                        <input type="text" class="login__input name" placeholder="Usuario" requiered="requiered" name="Usuario" />
                    </div>
                    <div class="login__row">
                        <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                            <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                        </svg>
                        <input type="password" class="login__input pass" placeholder="Contraseña"requiered="requiered" name="ContraseñaUsu" />
                    </div>
                    <input type="submit" value="entrar" class="login__submit" />
}
                    <p class="login__signup">¿No tienes cuenta? &nbsp;<a href="@Url.Action("Registrarse","Publico")">Registrate</a></p>
                </div>
            </div>
        </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Style/login/js/index.js"></script>
</body>
</html>

