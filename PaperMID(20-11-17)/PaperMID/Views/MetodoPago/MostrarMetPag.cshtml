@using System.Data;
@model DataTable

<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="col-md-11">
            <div class="card">
                <div class="header">
                    <h4 class="title">Mostrar Métodos de Pago</h4>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Método de Pago</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
            {
                            <tr id="fila_@row["IdMetodoPago"]">
                                <td>@row["IdMetodoPago"]</td>
                                <td>@row["TipoPago"]</td>
                                <td>@Html.ActionLink("Editar", "ActualizarMetodoPago", "MetodoPago", new { id = @row["IdMetodoPago"], @class = "btn btn-info btn-fill pull-right" }, null)</td>
                                <td>@Html.ActionLink("Eliminar", "Eliminar_MetPag", new { id = @row["IdMetodoPago"], @class = "btn btn-info btn-fill pull-right" }, null)</td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
