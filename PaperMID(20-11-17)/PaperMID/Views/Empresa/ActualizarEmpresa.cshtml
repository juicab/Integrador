@model PaperMID.BO.EmpresaBO
@{
    ViewBag.Title = "ActualizarEmpresa";
    Layout = "~/Views/Master/_LayoutAdministrador.cshtml";
}
<div class="content">
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="container-fluid">
        <div class="col-md-11">
            <div class="card">
                <h4 class="title">Actualizar Estado</h4>
                @using (Html.BeginForm("ActuaDatosEmpre", "Empresa", FormMethod.Post))
                {
                    <table class="table table-striped">
                        <tr>
                            <td>Código</td>
                            <td>@Html.TextBoxFor(x => x.IdEmpresa)</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.NombreEmpre)</td>
                        </tr>
                        <tr>

                            <td>Nombre del Pais</td>
                            <td>@Html.TextAreaFor(x => x.MisionEmpre,new { @rows = "5", @style = "width: 100%; height: 87px;" })</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.VisionEmpre)</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.CorreoEmpre)</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.TelefenoEmpre)</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.FacebookEmpre)</td>
                        </tr>
                        <tr>
                            <td>Nombre del Pais</td>
                            <td>@Html.TextBoxFor(x => x.IdDireccion1)</td>
                        </tr>
                        <tr>
                            <td colspan="2"><button class="btn-success" type="submit">Actualizar</button></td>
                        </tr>
                    </table>

                }
            </div>
        </div>
    </div>
</div>


